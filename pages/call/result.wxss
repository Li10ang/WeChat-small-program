.top{
    height: 180px;
    width: 100%;
    margin-top: -10px;
    padding-top: 10px;
}
.top-title-bg{
    background: url('image/bg_0.png') no-repeat center;
    width: 100px;
    height: 100px;
    position: absolute;
    top: 0;left: 0;
    margin-left: -10px;
    margin-top: -10px;
}
.top-title-name{
    height: 20px;
    line-height: 20px;
    position: relative;
    top: 20px;
}
.top-title-name::last-child{
    top: 40px;
}
.top-title{
    margin: 20px auto;
    /*background: #0062CC;*/
    color: #000;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    text-align: center;
    line-height: 80px;
    position: relative
}
.btn-box{
    position: absolute;
    right: 20px;
    top: 20px;
}
.btn{
    padding: 5px 8px;
    border-radius: 5px;
    text-align: center;
    font-size: 10px;
    float: left;
    color: #007aff;    
    background: #fff;
}
.time{
    text-align: center;
    margin: 0 auto;
    font-size: 12px;
    color: #8f8f94;
    margin-top: 12px;
}
.title{
    text-align: center;
    margin: 0 auto;
    font-size: 20px;
    color: #fff;
    line-height: 24px;
    margin-bottom: 10px;
}
.top-title-icon{
    width: 40px;
    height: 40px;
    margin-top: 20px;
}

